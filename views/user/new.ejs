<!doctype html>
<html>
  <%- include('../templates/head', { page : 'register' }) %>
  <body>
    <%- include('../templates/header', { page : 'register' }) %>
    <% if(err) { %>
        <p class="error"> <%= err %> </p>
    <% } %>
    <div class="pure-g">
      <div class="pure-u-1 offset-sm-1-3 pure-u-sm-1-3">
        <h1 class="title">register</h1>
        <form class="pure-form pure-form-stacked"
              action="/user/new"
              method="POST">
          <fieldset>
            <label for="email">email</label>
            <input type="email"
                   class="fill"
                   name="email"
                   placeholder="new@user.com">
            <label for="password">password</label>
            <input type="password"
                   class="fill"
                   name="password"
                   placeholder="password">
            <label for="password_confirm">confirm password</label>
            <input type="password"
                   class="fill"
                   name="password_confirm"
                   placeholder="password">
            <button class="pure-button bump-down"
                    type="submit">
              Sign up
            </button>
          </fieldset>
        </form>
      </div>
    </div>
  </body>
</html>
