<!doctype html>
<html>
  <%- include('../templates/head', { page : 'login' }) %>
  <body>
    <%- include('../templates/header', { page : 'login' }) %>
    <div class="pure-g">
      <div class="pure-u-1 offset-sm-1-3 pure-u-sm-1-3">
        <h1 class="title">login</h1>
        <form class="pure-form pure-form-stacked"
              action="/user/login"
              method="POST">
          <fieldset>
            <label for="email">email</label>
            <input type="email"
                   class="fill"
                   name="email"
                   placeholder="your@email.com">
            <label for="password">password</label>
            <input type="password"
                   class="fill"
                   name="password"
                   placeholder="password">
            <button class="pure-button bump-down"
                    type="submit">
              Sign in
            </button>
          </fieldset>
        </form>
      </div>
    </div>
  </body>
</html>
