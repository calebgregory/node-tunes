<!doctype html>
<html>
  <head>
    <title> <%= title %> </title>
    <link rel="icon" href="data:;base64,iVBORw0KGgo=">
  </head>
  <body>
    <h1> artists </h1>
    <a href="/artists/add">add</a>
    <table>
      <thead>
        <tr>
          <th>Artist</th>
          <th>Genre</th>
          <th>Wiki</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% artists.forEach(function(artist) { %>
        <tr>
          <td>
            <a href="/artists/<%= artist._id %>">
              <%= artist.name %>
            </a>
          </td>
          <td><%= artist.genre %></td>
          <td><%= artist.wiki %></td>
          <td>
            <form action="/artists/<%= artist._id %>/edit"
                  method="GET">
              <input type="submit" value="edit">
            </form>
          </td>
          <td>
            <form action="/artists/<%= artist._id %>/delete"
                  method="POST">
              <input type="submit" value="delete">
            </form>
          </td>
        </tr>
      <% }); %>
      </tbody>
    </table>

  </body>
</html>
