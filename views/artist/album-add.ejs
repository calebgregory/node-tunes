<!doctype html>
<html>
  <%- include('../templates/head', { page : artist.name+ " add album" }) %>
  <body>
    <%- include('../templates/header', { page : artist.name }) %>
    <div class="pure-g">
      <div class="pure-u-1 offset-sm-1-3 pure-u-sm-1-3">
        <div class="clearfix">
          <div class="information">
            <h1 class="title"><%= artist.name %></h1>
            <h2>add album</h2>
          </div>
          <div class="links">
            <div class="options pure-menu pure-menu-horizontal">
              <ul class="pure-menu-list">
                <li class="pure-menu-item"><a class="pure-menu-link" href="/artists/<%= artist._id %>">back</a></li>
              </ul>
            </div>
          </div>
        </div>
        <form action="/album/add/<%= artist._id %>"
              method="POST"
              class="pure-form">
          <label for="album-name">album name:</label>
          <input type="text"
                 id="album-name"
                 name="album-name"
                 placeholder="album name">
          <button class="pure-button submission" type="submit">submit</button>
        </form>
      </div>
    </div>
  </body>
</html>
