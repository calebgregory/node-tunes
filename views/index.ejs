<!doctype html>
<html>
  <%- include('./templates/head', { page : 'artists' }); %>
  <body>
    <%- include('./templates/header', { page : 'artists' }); %>
    <div class="centered">
      <div class="options pure-menu pure-menu-horizontal">
        <ul class="pure-menu-list">
          <li class="pure-menu-item"><a class="pure-menu-link" href="/artists/add">add artist</a></li>
          <li class="pure-menu-item"><a class="pure-menu-link" href="/album/add">add album</a></li>
        </ul>
      </div>
      <table class="pure-table pure-table-horizontal">
        <thead>
          <tr>
            <th>Artist</th>
            <th>Genre</th>
            <th class="hide-sm">Wiki</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% artists.forEach(function(artist) { %>
          <tr>
            <td>
              <a href="/artists/<%= artist._id %>">
                <%= artist.name %>
              </a>
            </td>
            <td><%= artist.genre %></td>
            <td class="hide-sm"><%= artist.wiki %></td>
            <td>
              <form action="/artists/<%= artist._id %>/edit"
                    method="GET">
                <input type="submit" class="edit" value="edit">
              </form>
            </td>
            <td>
              <form action="/artists/<%= artist._id %>/delete"
                    method="POST">
                <input type="submit" class="delete" value="delete">
              </form>
            </td>
          </tr>
        <% }); %>
        </tbody>
      </table>
    </div>

  </body>
</html>
