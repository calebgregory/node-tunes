<!doctype html>
<html>
  <%- include('../templates/head', { page : song.name }); %>
  <body>
    <%- include('../templates/header', { page : 'edit : "'+song.name+'"' }) %>
    <div class="pure-g">
      <div class="pure-u-1 offset-sm-1-3 pure-u-sm-1-3">
        <h2 class="title">edit</h2>
        <form action='/song/<%= song._id %>/edit'
              method='POST'
              class="pure-form">
          <label for="name">name</label>
          <input type="text"
                 id="name"
                 name="name"
                 value="<%= song.name %>">
          <button class="pure-button submission" type="submit">submit</button>
        </form>
      </div>
    </div>
  </body>
</html>
