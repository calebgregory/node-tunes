<!doctype html>
<html>
  <%- include('../templates/head', { page : 'add song' }); %>
  <body>
    <%- include('../templates/header', { page : album.artist.name }) %>
    <div class="pure-g">
      <div class="pure-u-1 offset-sm-1-3 pure-u-sm-1-3">
        <h3>album: <span class="designation"><%= album.name %></span></h3>
        <form action="/song/add/<%= album._id %>"
              method="POST"
              class="pure-form">
          <label for="name">song name</label>
          <input type="text"
                 id="name"
                 name="name"
                 placeholder="song name">
        </form>
      </div>
    </div>
  </body>
</html>
