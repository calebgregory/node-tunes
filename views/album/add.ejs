<!doctype html>
<html>
  <%- include('../templates/head', { page : 'add album' }); %>
  <body>
    <%- include('../templates/header', { page : 'add album' }); %>

    <div class="pure-g">
      <div class="pure-u-1 offset-sm-1-3 pure-u-sm-1-3">
        <div class="artist-search">
          <form action="" class="pure-form">
            <fieldset>
              <label for="artist-search">Enter an artist name</label>
              <input type="text"
                     id="artist-search"
                     class="fill"
                     placeholder="artist name">
              <button class="pure-button submission bump-down" type="submit">search</button>
            </fieldset>
          </form>
        </div>
        <div class="artist-matches">
          <form action="/album"
                method="POST"
                class="pure-form pure-form-stacked">
            <fieldset>
              <div class="pure-g">
                <div class="pure-u-1">
                  <label for="selected-artist">search results:</label>
                  <select id="selected-artist" class="fill" name="artist">
                  </select>
                </div>
                <div class="pure-u-1">
                  <label for="album-name">album name:</label>
                  <input type="text"
                         id="album-name"
                         class="fill"
                         name="album-name"
                         placeholder="album name">
                </div>
              </div>
              <button type="submit" class="pure-button submission bump-down">add album</button>
            </fieldset>
          </form>
        </div>
      </div>
    </div>
    <%- include('../templates/scripts', { page : 'album-add' }); %>
  </body>
</html>
