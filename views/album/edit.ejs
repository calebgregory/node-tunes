<!doctype html>
<html>
  <%- include('../templates/head', { page : album.name+' edit' }); %>
  <body>
    <h1><%= album.artist.name %></h1>
    <h3><%= album.name %></h3>
    <form class="pure-form pure-form-stacked"
          action="/album/<%= album._id %>/edit"
          method="POST">
      <% album.songs.forEach(function(song) { %>
        <input type="text"
               name="<%= song._id %>"
               value="<%= song.name %>">
      <% }); %>
      <input type="submit" value="submit">
    </form>
  </body>
</html>
